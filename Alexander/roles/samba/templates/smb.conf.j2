[global]
   workgroup = WORKGROUP
   server role = standalone server
   map to guest = Bad User
   log file = /var/log/samba/log.%m
   max log size = 50
   server min protocol = SMB2

[{{ smb_share_name }}]
   path = {{ smb_share_path }}
   browseable = yes
   writable = yes
   guest ok = yes
   read only = no
   force user = root
   create mask = 0777
   directory mask = 0777
